{
  "name": "@pearlbea/better-img-stencil",
  "version": "1.2.8",
  "description":
    "A simple element that adds a fallback url and logging function to an image.",
  "module": "dist/esm/index.js",
  "main": "dist/better-img-stencil.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": ["dist/"],
  "scripts": {
    "build": "stencil build",
    "dev":
      "sd concurrent \"stencil build --dev --watch\" \"stencil-dev-server\" ",
    "serve": "stencil-dev-server",
    "start": "npm run dev",
    "test": "jest",
    "test.watch": "jest --watch"
  },
  "devDependencies": {
    "@stencil/core": "^0.9.1",
    "@stencil/dev-server": "latest",
    "@stencil/utils": "latest",
    "@types/jest": "^21.1.1",
    "jest": "^21.2.1"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$":
        "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "json", "jsx"]
  }
}
